<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_one_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_one_login"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E1C639" />

        <RelativeLayout
            android:layout_marginTop="90dp"
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/create_acc"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_one_login"
                android:layout_marginLeft="10dp"
                android:text="@string/create_acc"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:visibility="gone"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="UserName"

                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#696969" />

                <TextView
                    android:id="@+id/editTextPhone"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:text="8148580586"
                    android:textColor="@color/black"
                    android:textColorHint="#696969"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/editTextTextPassword2"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Password"

                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#696969" />

                <EditText
                    android:id="@+id/editTextTextPassword3"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#696969" />

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="Cab Name "
                    android:inputType="textPersonName"
                    android:textColorHint="#696969" />

                <EditText
                    android:id="@+id/editTextNumber"
                    android:layout_width="329dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"

                    android:ems="10"
                    android:hint="Vehicle number"
                    android:maxEms="10"
                    android:minEms="10"
                    android:textColorHint="#696969" />


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="Accept Terms And Conditions"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/btnbg"
                    android:onClick="reg"
                    android:layout_marginLeft="20dp"
                    android:text="Register"
                    android:textColor="#150E0E"
                    android:textStyle="bold"
                    app:cornerRadius="35dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

